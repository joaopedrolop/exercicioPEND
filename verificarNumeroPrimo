let numero = parseFloat(prompt("Digite um NÃºmero: "));


function ehPrimo(numero){ 
    if ( numero === 2 ){
        console.log(true);
    }else if(numero % 2 === 0){
        console.log(false);
    }else{
        for (let i = 3; i<numero ; i=i+2){
        let divisao = numero % i;
      if (divisao != 0){
        //console.log(i,false);
      }else{
        //console.log(i,true);
        return 'false';
      }
    } return 'true';
    }
    
}

console.log(ehPrimo(numero));
