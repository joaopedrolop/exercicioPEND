let numero = parseFloat(prompt("Digite um NÃºmero: "));


function ehPrimo(numero){ 
    if ( numero === 2 ){
        console.log(true);
    }else if(numero % 2 === 0){
        console.log(false);
    }
    for (let i = 1; i >= 3; i++){
        let divisao = numero % i;
      if (divisao != 0){
        console.log(false);
      }else{
        console.log(true);
      }
    }
}

ehPrimo(numero);
